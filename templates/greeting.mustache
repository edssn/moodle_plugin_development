<div class="w-25 py-1">
    <input type="text"
        name="name"
        data-region="local_helloworld/greeting-input"
        class="form-control"
        placeholder="{{#str}}entername, local_helloworld{{/str}}"
        aria-label="{{#str}}entername, local_helloworld{{/str}}"
    />
</div>
<div>
    <button data-action="local_helloworld/greeting-greet_button"
            class="btn btn-primary">{{#str}}go{{/str}}
    </button>
    <button data-action="local_helloworld/greeting-reset_button"
            class="btn btn-secondary">{{#str}}reset{{/str}}
    </button>
</div>
<div data-region="local_helloworld/greeting-usergreeting" class="py-2">
</div>

{{#js}}
require(['local_helloworld/greeting'], function(module) {
    module.init({{userid}});
});
require(['local_helloworld/helloworld'], function(module) {
    module.init('{{first}}','{{second}}');
});
{{/js}}